<% breadcrumb :notices %>
<section id="sl_notice_index" class="table-responsive">
	<table width="100%" cellpadding="0" cellspacing="0" class="table table-striped">
			<colgroup>
				<col width="100px" />
				<col />
				<col width="70px" />
				<col width="130px" />
			</colgroup>
			<thead>
				<tr>
					<th class="sl_name"><%=t(:label_name) %></th>
					<th class="sl_title"><%=t(:label_title) %></th>
					<th class="sl_right sl_count"><%=t(:label_count) %></th>
					<th class="sl_right sl_registered_date"><%=t(:label_created_at) %></th>
				</tr>
			</thead>
			<tbody>
				<% unless @notices.empty? %>
				<% @notices.each do |notice| %>
				<tr>
					<td><p class="sl_name"><%= notice.user.name %></p></td>
					<td><p><%= link_to notice.title, notice  %></p></td>
					<td class="sl_right"><p class="sl_count"><%=notice.impressionist_count(:filter=>:ip_address) %></p></td>
					<td class="sl_right"><p class="sl_registered_date"><%=notice.created_at.to_date %></p></td>
				</tr>
				<% end %>
				<% else %>
				<tr>
					<td colspan="4"><p><%=t(:no_data) %></p></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	<div id="sl_index_bottom_menu">
  <% if can? :create, Notice %>
    <%= link_to t(:link_new), new_notice_path,:rel=>"nofollow" %>
  <% end %>
  <%= paginate @notices %>
  </div>
</section>